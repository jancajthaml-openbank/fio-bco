[Unit]
Description=openbank FIO Bank Connection REST service
PartOf=fio-bco.service
After=fio-bco.service
ConditionPathExists=/etc/init/fio-bco.conf

[Service]
Type=notify
EnvironmentFile=/etc/init/fio-bco.conf
StartLimitBurst=0
ExecStart=/usr/bin/fio-bco-rest
StandardInput=null
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
Restart=always
RestartSec=0
TimeoutStartSec=0
TimeoutSec=infinity
KillMode=process

[Install]
WantedBy=fio-bco.service
