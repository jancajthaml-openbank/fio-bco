#!/bin/sh

set -e

case "$1" in

  configure)
    if [ -f "/etc/init/fio-bco.conf" ] ; then
      systemctl unmask fio-bco.service >/dev/null
      systemctl enable fio-bco.service >/dev/null
      (systemctl start fio-bco.service >/dev/null || :)
    else
      (>&2 echo "/etc/init/fio-bco.conf file not found")
      exit 1
    fi
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    (>&2 echo "postinst called with unknown argument \ `$1`")
    exit 1
  ;;

esac

exit 0
